{
  "name": "automs",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "description": "",
  "homepage": "https://aotuzuche.github.io/automs",
  "devDependencies": {
    "commitizen": "^4.2.4",
    "conventional-changelog": "^3.1.24",
    "conventional-changelog-cli": "^2.1.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.29.0",
    "eslint-config-atzuche": "^3.0.3",
    "eslint-plugin-prettier": "^3.4.0",
    "git-cz": "^4.7.6",
    "husky": "^6.0.0",
    "lerna": "^4.0.0",
    "lint-staged": "^11.0.0",
    "np": "^7.5.0",
    "prettier": "^2.3.2",
    "typescript": "^4.3.5"
  },
  "scripts": {
    "doc": "cd ./document && yarn start",
    "version": "yarn log && git add CHANGELOG.md",
    "log": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "test": "cd ./example && ../packages/cli/commands/index.js doctor",
    "eslint": "eslint --ext .js, scripts packages",
    "prettier": "prettier -c --write '**/*'",
    "ps": "sh ./scripts/publish.sh",
    "push": "sh ./scripts/push.sh",
    "prepare": "husky install"
  },
  "files": [
    "packages",
    "scripts"
  ],
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "engines": {
    "node": ">=12.15.0"
  },
  "author": "eason.chiu@atzuche",
  "repository": "git@github.com:aotuzuche/automs.git",
  "license": "MIT"
}
